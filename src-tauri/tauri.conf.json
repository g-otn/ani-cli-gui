{
  "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ani-cli-gui",
    "version": "0.3.0"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://*/*",
          "https://*/*"
        ]
      },
      "shell": {
        "execute": true,
        "scope": [
          {
            "name": "curl-silent-headers",
            "cmd": "curl",
            "args": [
              "-s",
              { "validator": "^https?://" },
              "-I",
              "-A",
              "\"Mozilla/5.0 (X11; Linux x86_64; rv:99.0) Gecko/20100101 Firefox/100.0\""
            ]
          },
          {
            "name": "vlc",
            "cmd": "vlc",
            "args": [
              { "validator": "^https://" },
              { "validator": "^--http-referrer=https?://" },
              { "validator": "^--meta-title=\"[\\w\\d-]+ episode \\d+\"$" }
            ]
          },
          {
            "name": "mpv",
            "cmd": "mpv",
            "args": [
              { "validator": "^https://" },
              { "validator": "^--referrer=https?://" },
              { "validator": "^--force-media-title=\"[\\w\\d-]+ episode \\d+\"$" }
            ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.gotn.ani-cli-gui",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "ani-cli-gui",
        "height": 775,
        "minHeight": 200,
        "width": 750,
        "maxWidth": 1130,
        "minWidth": 500
      }
    ]
  }
}
